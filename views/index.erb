<h1>All Stores</h1>
<ul>
<%@stores.each do |store|%>
  <li><a href="/<%=store.id%>"><%=store.name%></a></li>
<%end%>
</ul>
<br>
<h3>Add New Store</h3>
<% if @new_store!=nil %>
  <h5><%=@new_store.errors[:name][0]%></h5>
<% end %>
<form action="/" method="post">
  <div class="form-group">
    <label for="s_name">Store Name</label>
    <input type="text" name="s_name">
  </div>
  <button type="submit" name="button">Add Store</button>
</form>
