
<div class="row">
  <div class="col-md-6">
    <h1>All Stores</h1>
    <ul>
    <%@stores.each do |store|%>
      <li><a href="/stores/<%=store.id%>"><%=store.name%></a></li>
    <%end%>
    </ul>
  </div>
  <div class="col-md-6">
    <h1>Add New Store</h1>
    <% if @new_store!=nil %>
      <h5><%=@new_store.errors[:name][0]%></h5>
    <% end %>
    <form action="/" method="post">
      <div class="form-group">
        <label for="s_name">Store Name</label>
        <input type="text" name="s_name">
      </div>
      <button type="submit" name="button" class='btn btn-info'>Add Store</button>
    </form>
  </div>
</div>
