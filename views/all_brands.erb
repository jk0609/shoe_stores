<h1>All Brands</h1>
<ul>
<%@brands.each do |brand|%>
  <li>Name: <a href="/<%=brand.id%>"><%=brand.name%></a>   Price: $<%=brand.price%></li>
<%end%>
</ul>
<br>
<h3>Add New Brand</h3>
<% if @new_brand!=nil %>
  <h5><%=@new_brand.errors[:name][0]%></h5>
  <h5><%=@new_brand.errors[:price][0]%></h5>  
<% end %>
<form action="/brands" method="post">
  <div class="form-group">
    <label for="b_name">Brand Name</label>
    <input type="text" name="b_name">
  </div>
  <div class="form-group">
    <label for="b_price">Brand Price</label>
    <input type="number" step='.01' name="b_price">
  </div>
  <button type="submit" name="button">Add Brand</button>
</form>
